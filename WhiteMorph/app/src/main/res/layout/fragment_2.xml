<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090A0A"
    tools:context=".Fragment2">

    <View
        android:id="@+id/view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="30dp"
        android:background="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21">

        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/firstval"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="3dp"
            android:background="@drawable/gray_rect"
            android:fontFamily="@font/morph"
            android:text="SC"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/enternum"
            android:layout_width="270dp"
            android:layout_height="87dp"
            android:background="@drawable/gray_rect"
            android:fontFamily="@font/morph"
            android:gravity="center"
            android:hint="Введите сумму"
            android:inputType="numberDecimal"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/secondval"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="3dp"
            android:background="@drawable/orang_rect"
            android:fontFamily="@font/morph"
            android:text="SC"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/resultnum"
            android:layout_width="270dp"
            android:layout_height="87dp"
            android:background="@drawable/orang_rect"
            android:fontFamily="@font/morph"
            android:gravity="center"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/convert"
        android:layout_width="357dp"
        android:layout_height="70dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/gray_rect"
        android:src="@drawable/baseline_compare_arrows_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <View
        android:id="@+id/view2"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convert" />


</androidx.constraintlayout.widget.ConstraintLayout>